<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <size
        android:width="100dp"
        android:height="100dp" />

    <solid android:color="@color/triangle_color" />

    <corners android:radius="0dp" />

    <padding
        android:bottom="80dp"
        android:right="80dp" />

    <rotate
        android:fromDegrees="45"
        android:pivotX="50%"
        android:pivotY="50%" />

</shape>
